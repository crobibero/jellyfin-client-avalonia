<?xml version="1.0" encoding="utf-8" ?>
<page:BaseContentPage x:Class="Jellyfin.Maui.Pages.Login.AddServerPage"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:ext="clr-namespace:Jellyfin.Maui.Extensions"
                      xmlns:page="clr-namespace:Jellyfin.Maui.Pages.Facades"
                      xmlns:vm="clr-namespace:Jellyfin.Maui.ViewModels.Login"
                      x:DataType="vm:AddServerViewModel"
                      x:TypeArguments="vm:AddServerViewModel">
    <VerticalStackLayout>
        <Label Text="{ext:Localize Login_ServerUrl}" />
        <Entry HorizontalOptions="Fill"
               Text="{Binding ServerUrl}" />
        <Button Command="{Binding AddServerCommand}"
                HorizontalOptions="Fill"
                Text="{ext:Localize Add}" />
    </VerticalStackLayout>
</page:BaseContentPage>
