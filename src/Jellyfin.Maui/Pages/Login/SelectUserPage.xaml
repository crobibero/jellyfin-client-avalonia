<page:BaseContentPage x:Class="Jellyfin.Maui.Pages.Login.SelectUserPage"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:ext="clr-namespace:Jellyfin.Maui.Extensions"
                      xmlns:page="clr-namespace:Jellyfin.Maui.Pages.Facades"
                      xmlns:views="clr-namespace:Jellyfin.Maui.ContentViews"
                      xmlns:vm="clr-namespace:Jellyfin.Maui.ViewModels.Login"
                      x:DataType="vm:SelectUserViewModel"
                      x:TypeArguments="vm:SelectUserViewModel">
    <FlexLayout Direction="Column">
        <!--  Header  -->
        <FlexLayout Direction="Row"
                    FlexLayout.Basis="100">
            <Label FlexLayout.Grow="1"
                   Style="{StaticResource LabelHeader}"
                   Text="{ext:Localize Login_ExistingUsers}" />
            <Button Command="{Binding AddUserCommand}"
                    Text="{ext:Localize Login_AddUser}" />
        </FlexLayout>
        <!--  Content  -->
        <ScrollView FlexLayout.Grow="1">
            <views:ItemFlexLayout Direction="Row"
                                  ItemTemplate="{StaticResource UserSelectTemplate}"
                                  ItemsSource="{Binding Users, Mode=OneWay}" />
        </ScrollView>
    </FlexLayout>
</page:BaseContentPage>
