<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Jellyfin.Mvvm.ViewModels;assembly=Jellyfin.Mvvm"
             x:Class="Jellyfin.Avalonia.Views.HomeView"
             x:DataType="viewModels:HomeViewModel">
    <ScrollViewer>
        <ItemsRepeater ItemsSource="{Binding HomeRowCollection, Mode=OneWay}"
                       ItemTemplate="{StaticResource HomeRowTemplateSelector}"/>
    </ScrollViewer>
</UserControl>

