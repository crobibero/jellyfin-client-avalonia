<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:Jellyfin.Mvvm.Models;assembly=Jellyfin.Mvvm">
    <DataTemplate x:DataType="models:HomeRowModel" x:Key="HomeRowDataTemplate">
        <Grid x:Name="HomeRowTemplate"
              IsVisible="{Binding Items, Converter={StaticResource IsListNotNullOrEmptyConverter}}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name, Mode=OneWay}"/>
                <ScrollViewer>
                    <ItemsRepeater ItemsSource="{Binding Items, Mode=OneWay}"
                                   ItemTemplate="{StaticResource PosterCardTemplate}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" />
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>

