<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="/Resources/Styles/Colors.axaml" />
                <MergeResourceInclude Source="/Resources/Styles/FontSizes.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontMedium}" />
    </Style>

    <Style Selector="StackPanel.poster-card">
        <Setter Property="Width" Value="300" />
    </Style>

</Styles>

