<Application x:Class="Jellyfin.Avalonia.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Styles>
        <!--<styling:FluentAvaloniaTheme PreferUserAccentColor="True" PreferSystemTheme="True" />-->
        <SimpleTheme />
        <StyleInclude Source="/Resources/Styles/Styles.axaml" />
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <!-- Merge all templates -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/Templates/ServerSelectTemplate.axaml" />
                <ResourceInclude Source="/Resources/Templates/UserSelectTemplate.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Add DataTemplates as static resource -->
            <StaticResource x:Key="ServerSelectTemplate" ResourceKey="ServerSelectDataTemplate" />
            <StaticResource x:Key="UserSelectTemplate" ResourceKey="UserSelectDataTemplate" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
